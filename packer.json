{
  "builders": [
    {
      "disk_size": "40",
      "image_labels": {
        "created": "{{ timestamp }}"
      },
      "image_name": "{{ user `image_name` | clean_resource_name }}",
      "machine_type": "n1-standard-2",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "ubuntu-minimal-2404-lts-amd64",
      "ssh_username": "root",
      "type": "googlecompute",
      "zone": "europe-west1-b"
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp/bootstrap",
      "source": "files",
      "type": "file"
    },
    {
      "script": "bootstrap.sh",
      "type": "shell"
    }
  ],
  "variables": {
    "image_name": "",
    "project_id": ""
  }
}

